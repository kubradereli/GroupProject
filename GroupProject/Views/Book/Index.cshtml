@using EntityLayer.Concrete
@model List<ReadingActivity>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<section id="team" class="team section-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-title mt-5">
            <h2>KİTAPLAR</h2>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
                    <div class="member">
                        <div class="member-img">
                            <img src="@item.ActivityImage" class="img-fluid" alt="">
                            <div class="social">
                                <a href="/Book/BookDetailsAll/@item.Book.BookID/"><i class="bi bi-info-circle-fill"></i>Kitap detayına git</a>
                            </div>
                        </div>
                        <div class="member-info">
                            <h4>@item.Book.BookName</h4>
                            <h6><i class="bi bi-book"></i> @item.Book.Category.CategoryName</h6>
                            <h5>@item.Book.BookAuthor</h5>
                            <span>Sayfa Sayısı: @item.Book.BookPageCount</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>