@using EntityLayer.Concrete
@model User
@{
    ViewData["Title"] = "UserChangePassword";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="card shadow mb-4 col-lg-4">
    <div class="card-header py-3">
        <h5 class="m-0 font-weight-bold text-primary">Şifre Bilgisi Güncelleme Sayfası</h5>
    </div>
    <div class="card-body">

        <input type="hidden" value="@Model.UserID" id="userID" />
        <input type="hidden" value="@Model.UserPassword" id="userPassword" />


        <div class="row pt-3">
            <div class="col-lg-12">
                @Html.Label("Mevcut Şifre")
                <input type="password" class="form-control" id="mevcutSifre" />
            </div>
        </div>
        <div class="row pt-3">
            <div class="col-lg-12">
                @Html.Label("Yeni Şifre")
                <input type="password" class="form-control" id="yeniSifre" />
            </div>
        </div>
        <div class="row pt-3">
            <div class="col-lg-12">
                @Html.Label("Yeni Şifre Tekrar")
                <input type="password" class="form-control" id="yeniSifreTekrar" />
            </div>
        </div>

        <div class="pt-3">
            <button class="btn btn-success pr-4 pl-4 pt-2 pb-2" font-size: 20px" onclick="sifreDegistir()"> <i class="fas fa-edit pr-3"></i>GÜNCELLE</button>
        </div>

    </div>
</div>

@section scripts{
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script>

        function sifreDegistir() {
            var id = $("#userID").val();
            var sifre = $("#userPassword").val();
            var mevcutSifre = $("#mevcutSifre").val();
            var yeniSifre = $("#yeniSifre").val();
            var yeniSifreTekrar = $("#yeniSifreTekrar").val();

            if (mevcutSifre.length == 0) {
                alert("Mevcut şifreyi giriniz !");
                return;
            }

            if (sifre != mevcutSifre) {
                alert("Mevcut şifrenizi yanlış girdiniz !");
                return;
            }

            if (yeniSifre.length == 0) {
                alert("Yeni şifreyi giriniz !");
                return;
            }

            if (yeniSifre != yeniSifreTekrar) {
                alert("Şifre tekrarını yanlış girdiniz !");
                return;
            }

            if (yeniSifreTekrar.length == 0) {
                alert("Yeni şifreyi tekrar giriniz !");
                return;
            }

            let user = {

                UserPassword: yeniSifre,
            };
            $.ajax({
                type: "post",
                url: "/User/UserChangePassword/",
                data: user,
                success: function (data) {
                    alert(data.data);
                    window.location.reload(true);
                }
            });
        }
    </script>
}