@model EntityLayer.Concrete.User

@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>OnePage Bootstrap Template - Index</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/Tema/assets/img/favicon.png" rel="icon">
    <link href="~/Tema/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Tema/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/Tema/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Tema/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Tema/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Tema/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/Tema/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/Tema/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="assets/css/style.css" rel="stylesheet">

    <!-- =======================================================
    * Template Name: OnePage - v4.9.2
    * Template URL: https://bootstrapmade.com/onepage-multipurpose-bootstrap-template/
    * Author: BootstrapMade.com
    * License: https://bootstrapmade.com/license/
    ======================================================== -->
</head>

<body>

    <section class="100vh mt-lg-5">
        <div class="container-fluid h-custom">

            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-9 col-lg-6 col-xl-4">
                    <img src="~/Tema/assets/img/about-img/register.jpeg"
                         class="img-fluid" alt="Sample image">
                </div>

                <div class=" col-md-8 col-lg-6 col-xl-4 offset-xl-0">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                            {
                                <form>
                                    <h2 style="color: #124265">KAYIT OL</h2>
                                    <br />

                                    <div class="row">
                                        <div class="form-outline mb-4 col-lg-6">
                                            <label for="validationCustom01">Ad</label>
                                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control form-control-md", required = "required" })
                                            @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-outline mb-4 col-lg-6">
                                            <label for="validationCustom02">Soyad</label>
                                            @Html.TextBoxFor(x => x.UserSurname, new { @class = "form-control form-control-md", required = "required" })
                                            @Html.ValidationMessageFor(x => x.UserSurname, "", new { @class = "text-danger" })
                                        
                                        </div>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label for="validationCustom03">Doğum Tarihi</label>
                                        @Html.TextBoxFor(x => x.UserDateOfBirth, new { @class = "form-control form-control-md" , type="date", required = "required" })
                                        @Html.ValidationMessageFor(x => x.UserDateOfBirth, "", new { @class = "text-danger" })
                                    
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label for="validationCustom04">Şehir</label>
                                        @Html.TextBoxFor(x => x.UserCity, new { @class = "form-control form-control-md", required = "required" })
                                        @Html.ValidationMessageFor(x => x.UserCity, "", new { @class = "text-danger" })
                                       
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label for="validationCustom05">E-mail</label>
                                        @Html.TextBoxFor(x => x.UserMail, new { @class = "form-control form-control-md", required = "required", type = "mail" })
                                        @Html.ValidationMessageFor(x => x.UserMail, "", new { @class = "text-danger"  })
                                  
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label for="validationCustom06">Şifre</label>
                                        @Html.TextBoxFor(x => x.UserPassword, new { @class = "form-control form-control-md", required = "required", type = "password" })
                                        @Html.ValidationMessageFor(x => x.UserPassword, "", new { @class = "text-danger"  })
                               
                                    </div>
                                    @*<div class="form-outline mb-4">
                                        <input type="password" id="form3Example3" class="form-control form-control-lg" placeholder="Şifre Tekrarı" />
                                    </div>*@

                                    <div class="text-center text-lg-start mt-4 pt-2">
                                        <button type="submit" class="btn btn-primary submit btn-group-lg">
                                            Kayıt Ol
                                        </button>

                                    </div>


                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </section>


    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/Tema/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/Tema/assets/vendor/aos/aos.js"></script>
    <script src="~/Tema/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Tema/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/Tema/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/Tema/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/Tema/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Tema/assets/js/main.js"></script>

</body>

</html>





