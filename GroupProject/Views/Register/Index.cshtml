@model EntityLayer.Concrete.User

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<section class="100vh mt-lg-5">
    <div class="container-fluid h-custom">

        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-4">
                <img src="~/Tema/assets/img/about-img/register.jpeg"
                     class="img-fluid" alt="Sample image">
            </div>

            <div class=" col-md-8 col-lg-6 col-xl-4 offset-xl-0">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                        {
                        <form>
                            <h2 style="color: #124265">KAYIT OL</h2>
                            <br />

                            <div class="row">
                                <div class="form-outline mb-4 col-lg-6">
                                    <label for="validationCustom01">Ad</label>
                                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control form-control-md" })
                                    @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
                                    @*<input type="text" id="form3Example3" class="form-control form-control-lg" placeholder="Ad" />*@
                                </div>
                                <div class="form-outline mb-4 col-lg-6">
                                    <label for="validationCustom02">Soyad</label>
                                    @Html.TextBoxFor(x => x.UserSurname, new { @class = "form-control form-control-md" })
                                    @Html.ValidationMessageFor(x => x.UserSurname, "", new { @class = "text-danger" })
                                    @*<input type="text" id="form3Example3" class="form-control form-control-lg" placeholder="Soyad" />*@
                                </div>
                            </div>

                            <div class="form-outline mb-4">
                                <label for="validationCustom03">Doğum Tarihi</label>
                                @Html.TextBoxFor(x => x.UserDateOfBirth, new { @class = "form-control form-control-md" })
                                @Html.ValidationMessageFor(x => x.UserDateOfBirth, "", new { @class = "text-danger" })
                                @*<input type="text" id="form3Example3" class="form-control form-control-lg" placeholder="Doğum Tarihi" />*@
                            </div>
                            <div class="form-outline mb-4">
                                <label for="validationCustom04">Şehir</label>
                                @Html.TextBoxFor(x => x.UserCity, new { @class = "form-control form-control-md" })
                                @Html.ValidationMessageFor(x => x.UserCity, "", new { @class = "text-danger" })
                                @*<input type="text" id="form3Example3" class="form-control form-control-lg" placeholder="Şehir" />*@
                            </div>
                            <div class="form-outline mb-4">
                                <label for="validationCustom05">E-mail</label>
                                @Html.TextBoxFor(x => x.UserMail, new { @class = "form-control form-control-md" })
                                @Html.ValidationMessageFor(x => x.UserMail, "", new { @class = "text-danger" })
                                @*<input type="email" id="form3Example3" class="form-control form-control-lg" placeholder="E-mail" />*@
                            </div>
                            <div class="form-outline mb-4">
                                <label for="validationCustom06">Şifre</label>
                                @Html.TextBoxFor(x => x.UserPassword, new { @class = "form-control form-control-md" })
                                @Html.ValidationMessageFor(x => x.UserPassword, "", new { @class = "text-danger" })
                                @*<input type="password" id="form3Example3" class="form-control form-control-lg" placeholder="Şifre" />*@
                            </div>
                            @*<div class="form-outline mb-4">
            <input type="password" id="form3Example3" class="form-control form-control-lg" placeholder="Şifre Tekrarı" />
        </div>*@

                        <div class="text-center text-lg-start mt-4 pt-2">
                            <button type="submit" class="btn btn-primary submit btn-group-lg">
                                Kayıt Ol
                            </button>
                            
                        </div>
                            

                        </form>
                        }
                    </div>
                </div>
            </div>
        </div>

        
    </div>
</section>