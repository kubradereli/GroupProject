@model IEnumerable<EntityLayer.Concrete.Contact>
@{
    ViewData["Title"] = "IncomingMessages";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .btn-a {
        border: 2px solid #E3E6F0;
        background-color: transparent;
        color: #E3E6F0;
        color: #000;
    }
    .btn-a:hover {
        background-color: #E3E6F0;
        color: #000;
    }
</style>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-sm-6">
                <h6 class="m-0 font-weight-bold text-primary mt-2">KULLANICIDAN GELEN MESAJLAR</h6>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="dropdown show mb-2 col-lg-2">
                <a class="btn btn-a form-control dropdown-toggle" href="#" role="button" id="sortDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Sırala
                </a>
                <div class="dropdown-menu" aria-labelledby="sortDropdown">
                    <a class="dropdown-item" href="?sort=UserNameSurnameASC">Kullanıcı Adı Soyadı (A-Z)</a>
                    <a class="dropdown-item" href="?sort=UserNameSurnameDESC">Kullanıcı Adı Soyadı (Z-A)</a>
                    <a class="dropdown-item" href="?sort=SubjectASC">Konu (A-Z)</a>
                    <a class="dropdown-item" href="?sort=SubjectDESC">Konu (Z-A)</a>
                    <a class="dropdown-item" href="?sort=DateASC">Etkinlik Başlangıç Tarihi (Yeni-Eski)</a>
                    <a class="dropdown-item" href="?sort=DateDESC">Etkinlik Başlangıç Tarihi (Eski-Yeni)</a>
                </div>
            </div>
            <div class="dropdown show mb-2 col-lg-2">
                <a class="btn btn-a form-control dropdown-toggle" href="#" role="button" id="sort2Dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Filtrele
                </a>
                <div class="dropdown-menu" aria-labelledby="sort2Dropdown">
                    <a class="dropdown-item" href="?sort2=StatusActive">Okunmuş Mesajlar</a>
                    <a class="dropdown-item" href="?sort2=StatusPassive">Okunmamış Mesajlar</a>
                    <a class="dropdown-item" href="?sort2=StatusAll">Tüm Mesajlar</a>
                </div>
            </div>
            <div class="form-group  col-lg-2">
                <input type="text" id="searchInput" class="form-control" placeholder="Ara...">
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Kullanıcı Adı Soyadı</th>
                        <th>Mail</th>
                        <th>Tarih</th>
                        <th>Konu</th>
                        <th>Mesaj</th>
                        <th>Okunma Durumu</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.User.UserName @item.User.UserSurname</td>
                            <td>@item.User.UserMail</td>
                            <td>@item.ContactDate.ToString("dd MMMM yyyy")</td>
                            <td>@item.ContactSubject</td>
                            <td>@item.ContactMessage</td>
                            @if (@item.ContactStatus == true)
                            {
                                <td>
                                    <a href="/Contact/ChangeContactStatus/@item.ContactID" class="btn btn-success btn-circle">
                                        <i class="fas fa-check"></i>
                                    </a>
                                </td>
                            }
                            else
                            {
                                <td>
                                    <a href="/Contact/ChangeContactStatus/@item.ContactID" class="btn btn-danger btn-circle">
                                        <i class="fas fa-question"></i>
                                    </a>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("table tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}