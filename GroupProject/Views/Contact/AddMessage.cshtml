@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "AddMessage";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

@await Component.InvokeAsync("ContactInformation")
<section id="contact" class="contact">   
    <div class="container" data-aos="fade-up">
        <h2 class="mb-3" style="text-align:center; color:#2487CE">Kiitaphane'ye Mesaj Gönder</h2>
        <hr />
        <div class="row">
            @using (Html.BeginForm("AddMessage", "Contact", FormMethod.Post))
            {
                <div class="row">
                    <div class="col-lg-6">
                        <div class="row">
                            <div class="col-md-6 form-group mb-3">
                                <input type="text" name="name" class="form-control" id="name" placeholder="Adınız" value="@ViewData["Ad"]" required disabled>
                            </div>
                            <div class="col-md-6 form-group mb-3">
                                <input type="text" name="name" class="form-control" id="surname" placeholder="Soyadınız" value="@ViewData["Soyad"]" required disabled>
                            </div>
                        </div>

                        <div class="form-group col-12 mb-3">
                            <input type="email" class="form-control" name="email" id="email" placeholder="E-mail" value="@ViewData["Mail"]" required disabled>
                        </div>

                        <div class="col-lg-12 mb-3">
                            @Html.DropDownListFor(x => x.ContactSubject, (List<SelectListItem>)ViewBag.Subjects, "Konu Seçiniz", new { @class = "form-control", required = "required" })
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="col-lg-12 mb-3">
                            @Html.TextAreaFor(x => x.ContactMessage, new { @class = "form-control", required = "required", placeholder = "Mesajınız ...", rows = "5" })
                        </div>

                        <div class="text-center">
                            <button class="btn btn-success pr-4 pl-4 pt-2 pb-2"> <i class="fas fa-plus pr-3"></i>Mesajı Gönder</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
