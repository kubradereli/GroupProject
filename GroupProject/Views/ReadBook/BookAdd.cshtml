@model EntityLayer.Concrete.ReadBook
@{
    ViewData["Title"] = "BookAdd";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1></h1>
@using (Html.BeginForm("BookAdd", "ReadBook", FormMethod.Post))
{
    @Html.Label("Kitap Adı")
    @Html.TextBoxFor(x => x.Book.BookName, new { @class = "form-control", required = "required" })

    <br />
    @Html.Label("Kitap Yazarı")
    @Html.TextBoxFor(x => x.Book.BookAuthor, new { @class = "form-control", required = "required" })

    <br />
    @Html.Label("Kitap Sayfa Sayısı")
    @Html.TextBoxFor(x => x.Book.BookPageCount, new { @class = "form-control", type="number", required = "required" })

    <br />
    @Html.Label("Kitap Yayınevi")
    @Html.TextBoxFor(x => x.Book.BookPublishingHouse, new { @class = "form-control", required = "required" })

    <br />
    @Html.Label("Kategori")
    @Html.DropDownListFor(x => x.Book.CategoryID, (List<SelectListItem>)ViewBag.cv, new { @class = "form-control" })
    <br />
    @Html.Label("Okuma Başlangıç Tarihi")
    @Html.TextBoxFor(x => x.ReadingDate, new { @class = "form-control", type = "date", required = "required" })
    <br />
    @Html.Label("Okuma Bitiş Tarihi")
    @Html.TextBoxFor(x => x.CompletionDate, new { @class = "form-control", type = "date", required = "required" })
    <br />

    @Html.Label("Kitap Puanı")
    @Html.TextBoxFor(x => x.ReadBookReviewPoint, new { @class = "form-control", required = "required", type = "number", min = "0", max = "10" })

    <br />
    <button class="btn btn-success mr-5" style="float:right">Kitap Ekle</button>
    <br />
    <br />
    <br />
    <br />

}


