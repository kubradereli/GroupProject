@model EntityLayer.Concrete.ReadingActivity
@{
    ViewData["Title"] = "ActivityAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h5 class="m-0 font-weight-bold text-primary">YENİ ETKİNLİK EKLE</h5>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("ActivityAdd", "ReadingActivity", FormMethod.Post))
        {
            <div class="row pt-3">
                <div class="col-lg-12">
                    @Html.Label("Etkinlik Adı")
                    @Html.TextBoxFor(x => x.ActivityTitle, new { @class = "form-control", required = "required" })
                </div>
                
              
            </div>
            <div class="row pt-3">
                <div class="col-lg-6">
                    @Html.Label("Kitap Adı")
                    @Html.TextBoxFor(x => x.Book.BookName, new { @class = "form-control", required = "required" })
                </div>
                <div class="col-lg-6">
                    @Html.Label("Kitap Yazarı")
                    @Html.TextBoxFor(x => x.Book.BookAuthor, new { @class = "form-control", required = "required" })
                </div>
            </div>
            <div class="row pt-3">
                <div class="col-lg-6">
                    @Html.Label("Kategori")
                    @Html.DropDownListFor(x => x.Book.CategoryID, (List<SelectListItem>)ViewBag.cv, new { @class = "form-control" })
                </div>
                <div class="col-lg-6">
                    @Html.Label("Kitap Sayfa Sayısı")
                    @Html.TextBoxFor(x => x.Book.BookPageCount, new { @class = "form-control", type = "number", required = "required" })
                </div>
            </div>
            <div class="row pt-3">
                <div class="col-lg-6">
                    @Html.Label("Aktivite Başlangıç Tarihi")
                    @Html.TextBoxFor(x => x.ActivityStartDate, new { @class = "form-control", type = "date", required = "required" })
                </div>
                <div class="col-lg-6">
                    @Html.Label("Aktivite Bitiş Tarihi")
                    @Html.TextBoxFor(x => x.ActivityFinishDate, new { @class = "form-control", type = "date", required = "required" })
                </div>
            </div>
            <div class="row pt-3">
                <div class="col-lg-12">
                    @Html.Label("Etkinlik Açıklaması")
                    @Html.TextAreaFor(x => x.ActivityContent, new { @class = "form-control", required = "required" })
                </div>
            </div>
            <div class="pt-3">
                <button class="btn btn-success pr-4 pl-4 pt-2 pb-2" style="float:right; font-size: 20px"> <i class="fas fa-plus pr-3"></i>EKLE</button>
            </div>
        }
    </div>
</div>

